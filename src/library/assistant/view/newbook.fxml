<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.assistant.controller.NewBookController">
   <children>
      <VBox prefHeight="300.0" prefWidth="407.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <JFXTextField fx:id="idField" labelFloat="true" promptText="Book ID" />
            <JFXTextField fx:id="titleField" labelFloat="true" promptText="Book Title" />
            <JFXTextField fx:id="authorField" labelFloat="true" promptText="Author" />
            <JFXTextField fx:id="publisherField" labelFloat="true" promptText="Publisher" />
         </children>
         <padding>
            <Insets left="10.0" right="10.0" top="20.0" />
         </padding>
      </VBox>
      <HBox layoutX="7.0" layoutY="200.0" prefHeight="100.0" prefWidth="400.0">
         <children>
            <JFXButton fx:id="saveBtn" onAction="#saveBook" prefHeight="90.0" prefWidth="190.0" style="-fx-background-color: #ffff00;" text="Save">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <padding>
                  <Insets left="20.0" />
               </padding>
            </JFXButton>
            <JFXButton fx:id="cancelBtn" onAction="#closeWindow" prefHeight="90.0" prefWidth="190.0" style="-fx-background-color: #00ffff;" text="Cancel" />
         </children>
      </HBox>
   </children>
</AnchorPane>
